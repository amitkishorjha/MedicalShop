@model IEnumerable<WMS.Models.Product>

@{
    ViewBag.Title = "Index";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Master</a></li>
    <li class="breadcrumb-item active">Product</li>
</ol>
<hr />
<h2 class="page-title">
    Manage Products
</h2>
<p>
    <a href="@Url.Action("Create", "Products")" class="btn btn-success btn-shadow">
        Create
        <span class="fa fa-plus-circle" aria-hidden="true"></span>
    </a>
</p>


<table id="Product" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.modelNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.modelNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img style="height:100px;width:100px;" src="~/Uploads/Product/@item.ImagePath.Substring(item.ImagePath.LastIndexOf('\\'))" />
                    @if (item.ImagePath1 != null)
                    {
                        <img style="height:100px;width:100px;" src="~/Uploads/Product/@item.ImagePath1.Substring(item.ImagePath1.LastIndexOf('\\'))" />
                    }
                </td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-danger">Action</button>
                        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="@Url.Action("Edit","Products")?UniqueId=@item.UniqueId">Edit</a>
                            <a class="dropdown-item" href="@Url.Action("Details","Products")?UniqueId=@item.UniqueId">Details</a>
                            <a class="dropdown-item" href="@Url.Action("Delete","Products")?UniqueId=@item.UniqueId">Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#Product').DataTable();
        });
    </script>
}